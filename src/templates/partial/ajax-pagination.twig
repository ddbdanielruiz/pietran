{% if posts.pagination.pages is not empty %}
    {% set pagination = posts.pagination %}
    <div class="pagination-block">
        <div class="container">
            <ul class="items">
                {% if pagination.pages|first and pagination.pages|first.current != true %}
                    <li class="page-item first">
                        <a href="{{ pagination.pages|first.link }}" class="page-link"><span class="lnr lnr-arrow-left"></span></a> 
                    </li>
                {% endif %}
                
                <li>
                    {% for page in pagination.pages %}
                        {% if page.link %}
                            <li class="page-item">
                                <a href="{{ page.link }}" class="{{ page.class }} page-link">{{ page.title }}</a>
                            </li>
                        {% else %}
                            <li class="page-item current">
                                <a class="{{ page.class }} page-link">{{ page.title }}</a>
                            </li>
                        {% endif %}
                    {% endfor %}
                </li>
                {% if pagination.pages|last and pagination.pages|last.current != true %}
                    <li class="page-item last">
                        <a href="{{ pagination.pages|last.link }}" class="page-link" ><span class="lnr lnr-arrow-right"></span></a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
{% endif %}